<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
  
    <parent>
        <groupId>int.esa.ccsds.mo</groupId>
        <artifactId>NMF_POM</artifactId>
	<version>0.1</version>
        <relativePath/>
    </parent>
  
    <artifactId>CCSDS_MC_IMPL_DLR_NO_FAT</artifactId>
    <packaging>jar</packaging>
    <version>0.1.0</version>

    <name>ESA/DLR MC Implementation: Without the fat</name>
    <description>The ESA/TU Graz/DLR implementation of the CCSDS MO MC services</description>
    <url>http://www.esa.int</url>
  
    <organization>
        <name>ESA</name>
        <url>http://www.esa.int</url>
    </organization>

    <licenses>
        <license>
            <name>The European Space Agency Public License, Version 2.0</name>
            <url>https://raw.github.com/esa/CCSDS_APPS/master/LICENCE.md</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
  
    <developers>
        <developer>
            <id>CesarCoelho</id>
            <name>CÃ©sar Coelho</name>
            <email>Cesar.Coelho@esa.int</email>
            <url>https://github.com/CesarCoelho</url>
        </developer>
        <developer>
            <id>SamCooper</id>
            <name>Sam Cooper</name>
            <email>sam.cooper@scisys.co.uk</email>
            <url>https://github.com/SamCooper</url>
        </developer>
        <developer>
            <id>NicolasVorwerg</id>
            <name>Nicolas Vorwerg</name>
            <email>Nicolas.Vorwerg@dlr.de</email>
            <url>https://github.com/NicolasVorwerg</url>
        </developer>
    </developers>


    <dependencies>
        <dependency>
            <groupId>int.esa.ccsds.mo</groupId>
            <artifactId>HELPER_TOOLS</artifactId>
        </dependency>

        <dependency>
            <groupId>int.esa.ccsds.mo</groupId>
            <artifactId>API_MAL</artifactId>
        </dependency>
        <dependency>
            <groupId>int.esa.ccsds.mo</groupId>
            <artifactId>API_COM</artifactId>
        </dependency>
        <dependency>
            <groupId>int.esa.ccsds.mo</groupId>
            <artifactId>API_MC</artifactId>
        </dependency>
        <dependency>
            <groupId>int.esa.ccsds.mo</groupId>
            <artifactId>API_COMMON</artifactId>
        </dependency>
        <dependency>
            <groupId>int.esa.ccsds.mo</groupId>
            <artifactId>RECONFIGURABLE_MO</artifactId>
        </dependency>
        <dependency>
            <groupId>int.esa.ccsds.mo</groupId>
            <artifactId>CCSDS_COM_IMPL</artifactId>
        </dependency>
    </dependencies>
  
    <build>
        <resources>
            <resource>
                <directory>${basedir}/..</directory>
                <includes>
                    <include>LICENCE.md</include>
                </includes>
            </resource>
        </resources>
    
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>AGSA-GITLAB</id>
            <name>The GitLab repository from the AGSA server.</name>
            <url>http://agsacloud01.dev.esoc.esa.int:8081/plugin/repository/everything/</url>
        </repository>
    </repositories>
</project>
